<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/layout_input_speech" />

    <include layout="@layout/layout_select_translate" />

    <Button
        android:id="@+id/speech_to_text_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="inputSpeech"
        android:textAllCaps="false"
        android:text="Start Speech to Text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_speech_translate_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small" />

</LinearLayout>
